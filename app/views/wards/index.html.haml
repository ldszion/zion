.ui.one.column.page.grid
  .column
    = render partial: 'messages/all'
    = link_to new_ward_path, class: 'ui primary icon button' do
      %i.plus.icon
      Nova Ala
    %table.ui.striped.table
      %thead
        %tr
          %th= t('text.wards')
          %th= t('text.stakes')
          %th

      %tbody
        - @wards.each do |ward|
          %tr
            %td= link_to ward.name, ward
            %td= link_to ward.stake.name, ward.stake
            %td
              .ui.mini.icon.buttons
                = link_to ward, class: 'ui button' do
                  %i.eye.icon
                = link_to edit_ward_path(ward), class: 'ui button' do
                  %i.edit.icon
                = link_to ward, method: :delete,
                  data: { confirm: 'Are you sure?' }, class: 'ui button' do
                  %i.trash.icon
