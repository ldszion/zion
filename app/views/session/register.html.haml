.ui.page.centered.grid
  .twelve.wide.column
    %h2.ui.basic.center.aligned.segment
      Cadastro
      %i.ui.write.icon
    %a{href: 'login'}
      Já tem uma conta? Entrar!
    - if notice
      .ui.negative.small.message
        .content
          %p=notice

    .ui.form
      = form_tag register_url, method: :post

      / Informações da Conta
      .ui.segments
        .ui.blue.segment
          .ui.centered.header Informações da Conta
        .ui.segment
          .field
            .ui.left.icon.input
              = email_field_tag "user[email]", nil, placeholder: "Email"
              %i.mail.icon

          .field
            .ui.left.icon.input
              = password_field_tag "user[password]", nil, placeholder: "Senha"
              %i.key.icon

          .field
            .ui.left.icon.input
              = password_field_tag "user[password_confirmation]", nil, placeholder: "Confirmação de senha"
              %i.key.icon

      / Informações Pessoais
      .ui.segments
        .ui.green.segment
          .ui.centered.header Informações Pessoais
        .ui.segment
          .ui.grid
            .five.wide.column
              .ui.card
                #preview_image.image
                  = image_tag "example/avatars/default.jpg"
                #avatar_button.ui.bottom.attached.basic.button
                  %i.photo.icon
                  Escolher Foto
                  .hidden
                    = file_field :person, :avatar
            .eleven.wide.column
              .field
                .ui.left.icon.input
                  = text_field :person, "name", placeholder: "Nome completo"
                  %i.user.icon

              .field
                .ui.left.icon.input
                  = text_field :person, "nickname", placeholder: "Nome preferido?"
                  %i.star.icon

              .field
                .ui.left.icon.input
                  = date_field :person, "birthday", placeholder: "Seu aniversário", class: "datemask"
                  %i.calendar.icon

              .field
                .ui.left.icon.input
                  = text_field :person, "phones",
                  placeholder: "Telefone de contato com DDD",
                  class: "phone"
                  %i.call.icon
              .ui.grid
                .column
                  .two.fields
                    .field
                      = collection_select(:person, :ward_id, @wards, :id, :name,
                        {include_blank: "Selecione sua Ala"},
                        {class: "ui search dropdown"})
                    .field
                      = select :person, :gender, [ ['Homem', '1'], ['Mulher','2'] ],
                        {include_blank: "Selecione seu Sexo"},
                        class: "ui dropdown"
              .ineline.field
                .ui.checkbox
                  = check_box(:person, :agreed)
                  %label Concordo que meus dados estarão seguros e poderão ser utilizados na aplicação

      %br
      / Informações do Contato de Emergência
      .ui.segments
        .ui.red.segment
          .ui.centered.header Contato de Emergência
        .ui.segment
          .field
            .ui.left.icon.input
              = text_field :emergency_contact, "name", placeholder: "Nome completo"
              %i.user.icon
          .field
            .ui.left.icon.input
              = text_field :emergency_contact, "phone",
              placeholder: "Telefone de contato com DDD",
              class: "phone"
              %i.call.icon
          .field
            = select :emergency_contact, :kinship, [ ['Pai', '1'], ['Mãe','2'] ],
              {include_blank: "Grau de parentesco"},
              class: "ui dropdown"

      .ui.green.segment
        %button.ui.right.floated.green.button{type:"submit"}
          Cadastrar
          %i.sign.in.icon
        %a{href: 'login'}
          Já tem uma conta? Entrar!
