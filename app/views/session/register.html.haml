.ui.page.centered.grid
  .ten.wide.column
    %h2.ui.basic.center.aligned.segment
      Cadastro
      %i.ui.write.icon

    - if notice
      .ui.negative.small.message
        .content
          %p=notice

    .ui.form.segment
      = form_tag login_url, method: :post, autocomplete: :off
      .field
        .ui.right.icon.input
          = text_field_tag "email", nil, placeholder: "Email", :autocomplete => :off
          %i.mail.icon{"aria-hidden" => "true"}

      .field
        .ui.right.icon.input
          = password_field_tag "password", nil, placeholder: "Senha", :autocomplete => :off
          %i.key.icon{"aria-hidden" => "true"}

      .field
        .ui.right.icon.input
          = text_field_tag "name", nil, placeholder: "Digite seu nome"
          %i.user.icon{"aria-hidden" => "true"}

      %button.ui.fluid.green.button{type:"submit"}
        Cadastrar
        %i.sign.in.icon{"aria-hidden" => "true"}
      %br
      %a{href: 'login'}
        JÃ¡ tem uma conta? Entrar!