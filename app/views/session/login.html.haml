      Login
      %i.ui.lock.icon

    = render partial: 'messages/alert'

    .ui.form.stacked.raised.segment
      = form_tag login_url, method: :post
      .field
        .ui.left.icon.input
          = text_field_tag 'email', nil, placeholder: 'Email'
          %i.user.icon

      .field
        .ui.left.icon.input
          = password_field_tag 'password', nil, placeholder: 'Senha'
          %i.lock.icon

      %button.ui.fluid.primary.button{ type: 'submit' }
        Entrar
        %i.sign.in.icon
