= form_for @stake do |f|
  - if @stake.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stake.errors.count, "error")} prohibited this stake from being saved:"
      %ul
        - @stake.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :region
    = f.text_field :region
  .actions
    = f.submit 'Save'
