%div
  .ui.page.grid
    .column
      .ui.divided.divided.items
        - for event in events
          .item
            .content
              .ui.two.column.grid
                .twelve.wide.column
                  .ui.header{ style: 'margin-bottom: 5px' }
                    = link_to event.name, event
                    .sub.header
                      #{event.start_date} - #{event.end_date}
                  .ui.description
                    #{event.description}
                .four.wide.column
                  .extra
                    .ui.right.floated.primary.small.button
                      Inscrever-me
                      %i.right.chevron.icon